<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:w="clr-namespace:Lastiq.Views.Windows">

    <Style x:Key="MainWindowStyle" TargetType="{x:Type w:MainWindow}">

        <Setter Property="Width" Value="1280"/>
        <Setter Property="MinWidth" Value="768"/>

        <Setter Property="Height" Value="640"/>
        <Setter Property="MinHeight" Value="360"/>

        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="ResizeMode" Value="CanResizeWithGrip"/>

        <Setter Property="Background" Value="White"/>

        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome NonClientFrameEdges="None"
                              GlassFrameThickness="0"
                              ResizeBorderThickness="3,0,3,3"
                              CaptionHeight="6"
                              CornerRadius="0"/>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>